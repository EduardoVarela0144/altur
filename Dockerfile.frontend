FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies (will be overridden by volume, but needed for initial build)
RUN npm install

# Copy application code
COPY frontend/ .

# Expose port
EXPOSE 5173

# Start development server (will use start.sh from volume if it exists)
CMD ["sh", "-c", "if [ -f start.sh ]; then ./start.sh; else npm run dev -- --host; fi"]

